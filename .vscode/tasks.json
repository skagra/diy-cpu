{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "build",
         "command": "dotnet",
         "type": "process",
         "args": [
            "build",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "mkdir-bin",
         "type": "shell",
         "options": {
            "shell": {
               "executable": "powershell"
            },
            "cwd": "${fileDirname}"
         },
         "command": "[System.IO.Directory]::CreateDirectory('bin')",
         "problemMatcher": []
      },
      {
         "label": "assemble-examples",
         "dependsOn": [
            "assemble-dow",
            "assemble-mul10",
            "assemble-multiply",
            "assemble-RAM",
            "assemble-square"
         ]
      },
      {
         "label": "assemble-os",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/os"
         },
         "args": [
            "os.asm",
            "-f3",
            "-obin/os.bin",
            "-lbin/os.txt"
         ],
         "problemMatcher": [],
         "dependsOn": [
            "mkdir-bin"
         ]
      },
      {
         "label": "assemble-RAM",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/examples"
         },
         "args": [
            "RAM.asm",
            "-f3",
            "-obin/RAM.bin",
            "-lbin/RAM.txt"
         ],
         "problemMatcher": [],
         "dependsOn": [
            "mkdir-machine-code"
         ]
      },
      {
         "label": "assemble-dow",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/examples"
         },
         "args": [
            "dow.asm",
            "-f3",
            "-obin/dow.bin",
            "-lbin/dow.txt"
         ],
         "problemMatcher": [],
         "dependsOn": [
            "mkdir-machine-code"
         ]
      },
      {
         "label": "assemble-mul10",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/examples"
         },
         "args": [
            "mul10.asm",
            "-f3",
            "-obin/mul10.bin",
            "-lbin/mul10.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "assemble-multiply",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/examples"
         },
         "args": [
            "multiply.asm",
            "-f3",
            "-obin/multiply.bin",
            "-lbin/multiply.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "assemble-square",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/examples"
         },
         "args": [
            "square.asm",
            "-f3",
            "-obin/square.bin",
            "-lbin/square.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "mkdir-test-code",
         "type": "shell",
         "options": {
            "shell": {
               "executable": "powershell"
            },
            "cwd": "${workspaceFolder}/tests"
         },
         "command": "[System.IO.Directory]::CreateDirectory('bin')",
         "problemMatcher": []
      },
      {
         "label": "assemble-tests",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/tests"
         },
         "args": [
            "tests.asm",
            "-f3",
            "-obin/tests.bin",
            "-lbin/tests.txt"
         ],
         "dependsOn": [
            "mkdir-test-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "publish",
         "command": "dotnet",
         "type": "process",
         "args": [
            "publish",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "watch",
         "command": "dotnet",
         "type": "process",
         "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/microasm/microasm.csproj"
         ],
         "problemMatcher": "$msCompile"
      }
   ]
}