{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "build",
         "command": "dotnet",
         "type": "process",
         "args": [
            "build",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "mkdir-machine-code",
         "type": "shell",
         "options": {
            "shell": {
               "executable": "powershell"
            },
            "cwd": "${workspaceFolder}/mCode"
         },
         "command": "[System.IO.Directory]::CreateDirectory('bin')",
         "problemMatcher": []
      },
      {
         "label": "generate-machine-code",
         "dependsOn": [
            "generate-custom-code",
            "generate-mul10-code",
            "generate-square-code"
         ]
      },
      {
         "label": "generate-custom-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "args": [
            "RAM.asm",
            "-f3",
            "-obin/RAM.bin",
            "-lbin/RAM.txt"
         ],
         "problemMatcher": [],
         "dependsOn": [
            "mkdir-machine-code"
         ]
      },
      {
         "label": "generate-dow-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "args": [
            "dow.asm",
            "-f3",
            "-obin/dow.bin",
            "-lbin/dow.txt"
         ],
         "problemMatcher": [],
         "dependsOn": [
            "mkdir-machine-code"
         ]
      },
      {
         "label": "generate-mul10-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "args": [
            "mul10.asm",
            "-f3",
            "-obin/mul10.bin",
            "-lbin/mul10.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "generate-square-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "args": [
            "square.asm",
            "-f3",
            "-obin/square.bin",
            "-lbin/square.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "mkdir-test-machine-code",
         "type": "shell",
         "options": {
            "shell": {
               "executable": "powershell"
            },
            "cwd": "${workspaceFolder}/tests"
         },
         "command": "[System.IO.Directory]::CreateDirectory('bin')",
         "problemMatcher": []
      },
      {
         "label": "generate-test-machine-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/tests"
         },
         "args": [
            "tests.asm",
            "-f3",
            "-obin/tests.bin",
            "-lbin/tests.txt"
         ],
         "dependsOn": [
            "mkdir-test-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "publish",
         "command": "dotnet",
         "type": "process",
         "args": [
            "publish",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "watch",
         "command": "dotnet",
         "type": "process",
         "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/microasm/microasm.csproj"
         ],
         "problemMatcher": "$msCompile"
      }
   ]
}