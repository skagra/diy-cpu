{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "build",
         "command": "dotnet",
         "type": "process",
         "args": [
            "build",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "mkdir-machine-code",
         "type": "shell",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "command": "[System.IO.Directory]::CreateDirectory('bin')",
         "problemMatcher": []
      },
      {
         "label": "generate-machine-code",
         "command": "dasm",
         "type": "process",
         "options": {
            "cwd": "${workspaceFolder}/mCode"
         },
         "args": [
            "RAM.asm",
            "-f3",
            "-obin/RAM.bin",
            "-lRAM.txt"
         ],
         "dependsOn": [
            "mkdir-machine-code"
         ],
         "problemMatcher": []
      },
      {
         "label": "publish",
         "command": "dotnet",
         "type": "process",
         "args": [
            "publish",
            "${workspaceFolder}/microasm/microasm.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "watch",
         "command": "dotnet",
         "type": "process",
         "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/microasm/microasm.csproj"
         ],
         "problemMatcher": "$msCompile"
      }
   ]
}